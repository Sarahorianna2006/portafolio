@{
    ViewData["Title"] = "Contacto";
}


<div class="contact-container">

    <div class="contact-title">
        <h2>Contáctame</h2>
    </div>

    <div class="contact-form">

        <!-- Esto aún no envía datos (lo hacemos cuando quieras integrarlo) -->
        <form method="post" action="#">

            <div class="form-group">
                <label>Nombre</label>
                <input type="text" name="name" placeholder="Tu nombre completo" required />
            </div>

            <div class="form-group">
                <label>Correo</label>
                <input type="email" name="email" placeholder="tucorreo@example.com" required />
            </div>

            <div class="form-group">
                <label>Mensaje</label>
                <textarea name="message" placeholder="Cuéntame cómo puedo ayudarte" required></textarea>
            </div>

            <button class="btn-submit" type="submit">Enviar mensaje</button>
        </form>

    </div>

</div>
